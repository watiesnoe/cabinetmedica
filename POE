class Reception extends Model
{
    public $errors=[];
    private function ligna_commande($id){
        if(isset($id)){

            $bdd=$this->bdd();
            $sql="SELECT * FROM commande 
                INNER JOIN ligne_commandes ON ligne_commandes.idcommande = commande.idcommande
                INNER JOIN medicament ON  ligne_commandes.idMedicement = medicament.idMedicement   
                WHERE commande.idcommande=:id";

            try {

                $stmt = $bdd->prepare($sql);

                $stmt->execute([':id'=>$id]);

                $results = $stmt->fetchAll(PDO::FETCH_OBJ);

                $stmt->closeCursor();

                return $results;


            }catch ( Exception $e ) {

                die ( $e->getMessage() );
            }

        }
    }


   
    public function updateReception ($vlaue=[],$id=null){

        $bdd=$this->bdd();

        if ($this->VerifyField($vlaue)){

            $this->e(extract($_POST));

            $ligne_commandes=$this->ligna_commande($id);
            $stocks=$this->findAll("medicament join lot ON lot.idMedicement=medicament.idMedicement");

             for ($i = 0; $i <count($id_ligne_commande) ; $i++) {
                 
                  foreach ($ligne_commandes as $ligne_commande) {

                     if($id_ligne_commande[$i]===$ligne_commande->id_ligne_commande){

                        foreach ($stocks as $stock) {

                            if($idMedicement[$i]===$stock->idMedicement){

                               if ($ligne_commande->qte_commande>=$quantite[$i]) {
                                   $stock_nouvel=((($stock->stock)-($ligne_commande->quantite_livret))+$quantite[$i]);

                                   $q = $bdd->prepare('UPDATE ligne_commandes
                                        SET 
                                        statut=:statut,
                                        prix_achat=:prix_achat,
                                        quantite_livret=:quantite_livret,
                                        prix_vente=:prix_vente
                                        WHERE id_ligne_commande=:id');

                                        $q->execute([
                                            ":id"=> $id_ligne_commande[$i],
                                            ":quantite_livret"=> $quantite[$i],
                                            ":prix_vente"=>$prix_vente[$i],
                                            ":prix_achat"=>$prix_achat[$i],
                                            ":statut"=>"receptionner"]);

                                    if($stock->idMedicement===$idMedicement[$i]) {

                                        $lot = $bdd->prepare('UPDATE lot
                                        SET
                                        prix_unitaire=:prix_unitaire,
                                        prix_pub=:prix_pub,
                                        stock=:stock
                                        WHERE idMedicement=:id');

                                        $lot->execute([
                                            ":prix_unitaire" => $prix_achat[$i],
                                            ":prix_pub" => $prix_vente[$i],
                                            ":stock" => $stock_nouvel,
                                            ":id" => $idMedicement[$i]]);
                                    }

                                    if($lot && $q){

                                         $this->set_flash("Modification reussie realisée avec succes ",'success');

                                    }

                               }elseif ($ligne_commande->qte_commande<$quantite[$i]){

                                   $this->set_flash("La quantité disponible de doit pas etre superieur a la ",'danger');

                               }else{

                                    $this->set_flash("Insertion  reussie realisée avec succes ",'success'); 
                               }
                            }
                        }
                     }
                 }
             }
            $this->redirect('Receptions/liste');

        }else{

            $this->save_input_data();

            return array_push($this->errors,"Les champs ne doivent pas etre vide!! ");
        }
    }

    public function InsrtionData($vlaue=[]){
        /*$content_dir = 'C:/xampp/htdocs/MVC/public/uplode_fille/';*/
        $bdd=$this->bdd();



        if ($this->VerifyField($vlaue)){

            $datecommande=date('Y-m-d H:i:s');

            $this->e(extract($_POST));

            $_POST['quantite']=$quantite;
            $_POST['prix_achat']=$prix_achat;
            $_POST ['idMedicement']=$idMedicement;
            $_POST ['id_ligne_commande']=$id_ligne_commande;
            $_POST ['prix_vente']=$prix_vente;

            $stocks=$this->findAll('medicament join lot on lot.idMedicement=medicament.idMedicement');
            $ligne_commandes=$this->findAll('ligne_commandes');



                $commande= $bdd->prepare('UPDATE commande
                                              SET 
                                          dateAchat=:dateAchat,
                                          idReception=:idReception
                                          WHERE idcommande=:idcommande');
                $commande->execute([":dateAchat"=>$datecommande,
                    ":idReception"=>$_SESSION['user_id'],
                    ":idcommande"=>$idcommande[1]]);

                for ($i=0; $i < count($_POST ['id_ligne_commande']); $i++) {
                    foreach ($stocks as $stock){
                        foreach ($ligne_commandes as $ligne_commande ){
                            if($ligne_commande->id_ligne_commande===$_POST ['id_ligne_commande'][$i]){
                                if($ligne_commande->qte_commande>=$quantite[$i]){
                                    $stock_nouvel=(($stock->stock)+($_POST['quantite'][$i]));

                                    $q = $bdd->prepare('UPDATE ligne_commandes
                            SET 
                            statut=:statut,
                            prix_achat=:prix_achat,
                            quantite_livret=:quantite_livret,
                            prix_vente=:prix_vente
                            WHERE id_ligne_commande=:id');

                                    $q->execute([
                                        ":id"=> $_POST ['id_ligne_commande'][$i],
                                        ":quantite_livret"=>$_POST['quantite'][$i],
                                        ":prix_vente"=>$_POST['prix_vente'][$i],
                                        ":prix_achat"=>$_POST['prix_achat'][$i],
                                        ":statut"=>"receptionner"]);

                                    if($stock->idMedicement===$_POST ['idMedicement'][$i]) {

                                        $lot = $bdd->prepare('UPDATE lot
                                        SET
                                        prix_unitaire=:prix_unitaire,
                                        prix_pub=:prix_pub,
                                        stock=:stock
                                        WHERE idMedicement=:id');

                                        $lot->execute([
                                            ":prix_unitaire" => $_POST['prix_achat'][$i],
                                            ":prix_pub" => $_POST ['prix_vente'][$i],
                                            ":stock" => $stock_nouvel,
                                            ":id" => $_POST ['idMedicement'][$i]]);
                                    }

                                    if($commande && $q){

                                        $this->set_flash("Insertion realisée avec succes ",'success');
                                    }
                                }elseif ($ligne_commande->qte_commande<$quantite[$i]){

                                    $this->set_flash("La quantité disponible de doit pas etre superieur a la ",'danger');
                                }else{
                                    $this->set_flash("Insertion realisée avec succes ",'success');
                                }
                            }
                        }

                    }
                }


            
        }else{

            $this->save_input_data();
            return array_push($this->errors,"Les champs ne doivent pas etre vide!! ");
        }
    }

}


