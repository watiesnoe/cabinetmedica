                                                            if(isset($champ)){


}elseif(isset($pourcantage)){

$pourcentage_montant=$this->select_data_table_join_where('select pourcentage_montant from securite_sociale WHERE idSecurite=:id',[':id'=>$pourcantage]);
$frais_reduit=($frais-(($frais)*($pourcentage_montant)/100));

if (count($this->errors)==0){

    $q = $this->insertion_update_simples_insert_id('INSERT INTO patient (nomPatient,prenomPatient,agePatient)
                        VALUES (:nomPatient,:prenomPatient,:agePatient)',[
        ":nomPatient"=>$nomPatient,
        ":prenomPatient"=>$prenomPatient,
        ":agePatient"=>$age
    ]);

    $idPatient = $q['lastInsertId'];

    $dateFin= date("Y-m-d", strtotime($dateTicket.'+10 day'));

    $ticketSave = $this->insertion_update_simples_insert_id('INSERT INTO ticket (typeTicket,dateDebut,dateFin,frais,idPatient,idUt,codeStructure,montant)
                        VALUES (:typeTicket,:dateDebut,:dateFin,:frais, :idPatient,:idUt,:nomStructure,:montant)');
    $ticketSave->execute([
        ":typeTicket"=>$typeTicket,
        ":dateDebut"=>$dateTicket,
        ":dateFin"=>$dateFin,
        ":frais"=>$frais_reduit,
        ":idPatient"=>$idPatient,
        ":nomStructure"=>$nomStructure,
        ":montant"=>$montant,
        ":idUt"=>$_SESSION['user_id']
    ]);
    $idTicket = $ticketSave['lastInsertId'];
    $ticketConsult =$this->insertion_update_simples('INSERT INTO consultation (idTicket)
                        VALUES (:idTicket )');
    $ticketConsult->execute([
        ":idTicket"=>$idTicket

    ]);

    $mouvement=$this->insertion_update_simples('INSERT INTO mouvements (montant,idTicket,dateMouvement,typemouvement)
                        VALUES (:montant,:idTicket,:dateMouvement,:typemouvement)',[
        ":idTicket"=>$idTicket,
        ":dateMouvement"=>$dateTicket,
        ":montant"=>$frais_reduit,
        ":typemouvement"=>"E"
    ]);


    if($q['q'] and $ticketSave && $ticketConsult and $mouvement){
        $this->clear_input_data();

        if ($typeTicket=='consulation'){
            $this->set_flash("Ticket de consultation pris le patient  ","success");

        } else if($typeTicket=='analyse'){
            $this->set_flash("Ticket d'analysepris pour le patient ","success");

        }

    }else{
        $this->set_flash("Erreur lors de l'ajout du code source;Veuillez reessayer SVP.");
        $this->save_input_data();
    }

}else{
    $this->save_input_data();
}
